<html>
    <head>
        <title>practice32</title>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <style>
            body {
                margin: 0;
                background-color: rgb(253, 248, 255);
            }
            .form-container {
                display: flex;
                position: absolute;
                top: 10%;
                z-index: 1;
                width: 80%; height: 80%;
                margin-left: 10%;
                border-radius: 30px;
                background-color: white;
            }
            .side {
                width: 45%; height: 100%; 
                background: linear-gradient(#e66465, #9198e5); 
                border-bottom-left-radius: 30px;
                border-top-left-radius: 30px;
            }
            form {
                margin-left: auto; margin-right: auto;
            }
            h1 {
                color: #e66465;
                margin: 100 0 50 0;
                background: linear-gradient(to right, #e66465, #9198e5);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }
            .text {
                margin: 0 0 20 10;
                border: 1px solid lightgray;
                border-radius: 20px;
                height: 30; width: 200;
                padding-left: 15px;
            }
            .text:focus {
                outline-color: #e66465;
            }
            button {
                border: none;
                background-color: #a2a9f0;
                color: white;
                height: 30; width: 80;
                border-radius: 15px;
                margin: 80 0 0 90%;
            }
            button:hover {
                opacity: 0.7;
            }
            span {
                color: gray;
                margin-left: 20;
            }
            /* toggle switch */
            .toggleSwitch {
                width: 40px; height: 20px;
                border-radius: 10px;
                background-color: white;
                position: relative;
                left: 20px;
                display: inline-block;
                box-shadow: 0 0 1rem 3px rgba(0 0 0 / 15%);
                cursor: pointer;
            }
            .toggleSwitch .toggleButton {
                width: 15px;
                height: 15px;
                border-radius: 50%;
                background-color: #e66465;
                position: absolute;
                top: 2.5; left: -17;
            }
            .toggleSwitch.active {
                background-color: #e66465;
            }
            .toggleSwitch.active .toggleButton {
                left: 2;
                background-color: white;
            }
            .toggleSwitch, .toggleButton {
                transition: all 0.2s ease-in;
            }
        </style>
        <script>
            function toggle() {
                const passwordSwitch = document.querySelector(".toggleSwitch");
                passwordSwitch.classList.toggle("active");
                if ($(passwordSwitch).hasClass("active")) {
                    $("input[name='password']").attr("type", "text");
                } else {
                    $("input[name='password']").attr("type", "password");
                }
            }
        </script>
    </head>

    <body>
        <div style="opacity: 0.7;">
            <div style="width: 40%; height: 100%; background: linear-gradient(#e66465, #9198e5);"></div>
        </div>
        <div class="form-container">
            <div class="side"></div>
            <form action="/signup" method="POST">
                <h1>Create Account</h1>
                <input type="text" name="name" class="text" placeholder="이름" required> <br>
                <input type="text" name="id" class="text" placeholder="ID" required> <br>
                <input type="password" name="password" class="text" style="margin-bottom: 10;" placeholder="PASSWORD" required> <br>
                <input type="checkbox" id="toggle" hidden>
                <label id="passwordSwitch" for="toggle" class="toggleSwitch" onclick="toggle();">
                    <span class="toggleButton"></span>
                </label> 
                <span style="margin-left: 30; position: relative; top: -5; font-size: 13px;">show password</span> <br>
                <input type="email" name="mail" class="text" placeholder="E-mail" style="margin-top: 10px;"> <br>
                <span>Birthday</span> <br>
                <input type="date" class="text" style="width: 200; padding-right: 15px; margin-top: 10px; color: gray;">
                <button>회원가입</button>
            </form>
        </div>
    </body>
</html>